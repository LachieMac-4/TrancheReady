<!doctype html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>TrancheReady â€” Verify</title>
  <link rel="stylesheet" href="/site/assets/style.css" />
</head>
<body>
  <header class="nav glass">
    <a class="brand" href="/"><span class="logo-dot"></span>TrancheReady</a>
    <nav>
      <a href="/features">Features</a>
      <a href="/pricing">Pricing</a>
      <a href="/faq">FAQ</a>
      <button id="themeToggle" class="pill">Toggle</button>
    </nav>
  </header>

  <main class="container">
    <section class="hero hero--short">
      <h1>Verify evidence pack</h1>
      <p class="lead">Below are the file hashes and build metadata for this pack.</p>
    </section>

    <section class="card">
      <pre class="status"><%= JSON.stringify(manifest, null, 2) %></pre>
      <p class="muted" style="margin-top:8px">Build: <%= build_id %></p>
      <div style="margin-top:10px">
        <a class="btn btn-primary" href="<%= `/download/${(manifest && manifest.token) || ''}` %>" onclick="event.preventDefault(); window.location = window.location.href.replace('/verify/','/download/');">Download ZIP</a>
      </div>
    </section>
  </main>

  <footer class="footer">
    <div class="container footer-inner">
      <div class="brand">TrancheReady</div>
      <nav>
        <a href="/">Home</a>
        <a href="/pricing">Pricing</a>
        <a href="/faq">FAQ</a>
      </nav>
    </div>
  </footer>

  <script src="/site/assets/site.js" defer></script>
</body>
</html>
